<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">


    <% newListItems.forEach(function(elements){ %>
      <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= elements._id %>"  onchange="this.form.submit()">
        <p><%=  elements.name  %></p>
      </div>
      <input type="hidden" name="itemListName" value="<%= listTitle %>">
      </form>
    <% }); %>
      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
